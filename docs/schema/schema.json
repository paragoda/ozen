{
    "type": "mysql",
    "connectionStringEnv": "OZEN_DB_CONNECTION_STRING",
    "tables": {
        "user": {
            "id": {
                "type": "int",
                "default": "autoincrement"
            },
            "name": {
                "type": "varchar",
                "flags": [
                    "nullable"
                ],
                "size": 512
            },
            "email": {
                "type": "email",
                "flags": [
                    "unique"
                ]
            },
            "profileViews": {
                "type": "int",
                "default": 0
            },
            "role": {
                "type": "enum",
                "choises": [
                    "USER",
                    "ADMIN"
                ],
                "default": "USER"
            },
            "coinflips": {
                "type": "boolean",
                "depth": 1
            },
            "posts": {
                "type": "virtual",
                "table": "posts",
                "depth": 1
            },
            "city": {
                "type": "text"
            },
            "country": {
                "type": "text"
            },
            "profile": {
                "type": "virtual",
                "table": "extendedProfile",
                "flags": [
                    "nullable"
                ]
            },
            "pets": {
                "type": "json"
            }
        }
    }
}